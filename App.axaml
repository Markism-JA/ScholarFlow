<Application xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="ScholarFlow.App"
    xmlns:local="using:ScholarFlow"
    xmlns:icon="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <CornerRadius x:Key="RadiusSmall">6</CornerRadius>
            <CornerRadius x:Key="RadiusMedium">8</CornerRadius>
            <CornerRadius x:Key="RadiusLarge">12</CornerRadius>
            <Thickness x:Key="SpacingSmall">8</Thickness>
            <Thickness x:Key="SpacingMedium">16</Thickness>

            <x:Double x:Key="FontSizeSmall">11</x:Double>
            <x:Double x:Key="FontSizeBody">13</x:Double>
            <FontWeight x:Key="WeightMedium">500</FontWeight>
            <FontWeight x:Key="WeightSemiBold">600</FontWeight>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FBFDF9" />
                    <SolidColorBrush x:Key="SurfaceBrush" Color="#EFF1ED" />
                    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#191C19" />
                    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#404943" />
                    <SolidColorBrush x:Key="SeparatorBrush" Color="#C0C9C1" />

                    <SolidColorBrush x:Key="SystemAccentBrush" Color="#006B54" />
                    <SolidColorBrush x:Key="SystemAccentHoverBrush" Color="#00513F" />
                    <SolidColorBrush x:Key="TextOnAccentBrush" Color="#FFFFFF" />
                    <SolidColorBrush x:Key="OutlineBrush" Color="#E5E5EA" />

                    <SolidColorBrush x:Key="PrimaryContainerBrush" Color="#96F7D7" />
                    <SolidColorBrush x:Key="SecondaryContainerBrush" Color="#F2F4F2" />
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#191C19" />
                    <SolidColorBrush x:Key="SurfaceBrush" Color="#2E312E" />
                    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#E1E3DE" />
                    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#C0C9C1" />
                    <SolidColorBrush x:Key="SeparatorBrush" Color="#404943" />

                    <SolidColorBrush x:Key="SystemAccentBrush" Color="#79DABB" />
                    <SolidColorBrush x:Key="SystemAccentHoverBrush" Color="#5BB89D" />
                    <SolidColorBrush x:Key="TextOnAccentBrush" Color="#00382B" />
                    <SolidColorBrush x:Key="OutlineBrush" Color="#404943" />

                    <SolidColorBrush x:Key="PrimaryContainerBrush" Color="#00513F" />
                    <SolidColorBrush x:Key="SecondaryContainerBrush" Color="#3B4B41" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <icon:MaterialIconStyles />

        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}" />
        </Style>
        <Style Selector="Border.card">
            <Setter Property="CornerRadius" Value="{StaticResource RadiusLarge}" />
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style Selector=":is(Window)">
            <Setter Property="FontFamily" Value="avares://ScholarFlow/Assets/Fonts#Inter" />
        </Style>
    </Application.Styles>

</Application>
